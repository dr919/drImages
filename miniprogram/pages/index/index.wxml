<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button open-type="getUserInfo" bindgetuserinfo="onGetUserInfo" class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})" size="default"></button>
    <view class="userinfo-nickname-wrapper">
      <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
    </view>
  </view>






  <view class="uploader">
    <navigator url="../im/im" open-type="navigate" class="uploader-text">
      <text>个人网站</text>
    </navigator>
  </view>
  <view class="uploader">
    <navigator url="../databaseGuide/databaseGuide" open-type="navigate" class="uploader-text">
      <text>通知</text>
    </navigator>
  </view>
  <!-- 衣橱 -->
  <view class="uploader">
    <navigator url="../wardrobe/index" open-type="navigate" class="uploader-text">
      <text>上传图片</text>
    </navigator>
  </view>


  <view class="uploader">
    <view class="uploader-text" bindtap="doUpload">
      <text>上传</text>
    </view>
    <view class="uploader-container" wx:if="{{imgUrl}}">
      <image class="uploader-image" src="{{imgUrl}}" mode="aspectFit" bindtap="previewImg"></image>
    </view>
  </view>


