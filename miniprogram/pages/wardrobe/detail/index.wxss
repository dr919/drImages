/* pages/wardrobe/index.wxss */
.dr_main {
  display: flex;
  flex-wrap: wrap;
  padding:20rpx 30rpx;
}
.item_img {
  width: 31%;
  height:200rpx;
  margin: 5rpx;
  overflow: hidden;
}
.no_data {
  text-align: center;
  line-height: 50%;
}

.swiper_con {
  height: 100%;
  position: fixed;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0.8);
}
.view_img {
  width: 65%;
  height:60%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.hide_btn {
  width: 65rpx;
  height: 65rpx;
  font-size: 58rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #fff;
}